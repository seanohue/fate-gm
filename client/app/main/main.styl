.character-form
  margin 20px 0

#banner
  border-bottom none
  margin-top -20px

#banner h1
  font-size 60px
  letter-spacing -1px
  line-height 1

.hero-unit
  background #4393B9
  color #F5F5F5
  padding 30px 15px
  position relative
  text-align center
  text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.navbar-text
  margin-left 15px

.character-name
  font-size: 24px

.character-label
  font-style: bold
  font-size: 16px
  float: left

.character
  font-style: italic
  font-size: 12px
  float: right
