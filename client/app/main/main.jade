header#banner.hero-unit
  .container
    h1 FATE GM
    p.lead Character & Situation Tracker

.container
  .row
    .col-lg-12
      h1.page-header Characters:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='character in $ctrl.characters')
        li
          a(href='#', uib-tooltip='{{character.desc}}')
            | {{character.name}}
            button.close(type='button', ng-click='$ctrl.deleteCharacter(character)') &times;

  form.character-form
    label Add character
    p.input-group
      input.form-control(type='text', placeholder='Add a new character here.', ng-model='$ctrl.newCharacter')
      span.input-group-btn
        button.btn.btn-primary(type='submit', ng-click='$ctrl.addCharacter()') Add New
